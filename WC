            <div class="status-badge">‚óè LIVE DATA</div>
        </div>
    </div>
    <div class="safety-body">
        <div class="timer-grid">
            <div class="time-card"><div id="days" class="number">0</div><div class="label">DAYS</div></div>
            <div class="time-card"><div id="hours" class="number">00</div><div class="label">HOURS</div></div>
            <div class="time-card"><div id="minutes" class="number">00</div><div class="label">MINS</div></div>
            <div class="time-card"><div id="seconds" class="number">00</div><div class="label">SECS</div></div>
        </div>
    </div>
</div>

<script>
    // Targets the 'Last Acc' tab (gid=743293875)
    const CSV_URL = 'https://docs.google.com/spreadsheets/d/e/2PACX-1vSXwF-92T09SgCmFnFLk6NjAWwK52BxFpyivdtrFtFWv-c4DdrF1jgpgZg7jWsyASCqVP7TxyDKVuH4/pub?gid=743293875&single=true&output=csv';

    async function initDashboard() {
        try {
            const response = await fetch(CSV_URL + '&cache=' + new Date().getTime());
            const csvText = await response.text();
            const rows = csvText.split('\n').map(row => row.split(','));

            if (rows.length >= 7) {
                // 1. Set Title from Cell A5: "Last WC Injury"
                document.getElementById('ticker-title').innerText = rows[4][0].replace(/"/g, '');
                
                // 2. Parse Date from Cell B6 and Time from Cell B7
                const datePart = rows[5][1].replace(/"/g, '').trim(); // 1/27/2026
                const timePart = rows[6][1].replace(/"/g, '').trim(); // 12:00:00 AM
                
                const injuryTime = new Date(`${datePart} ${timePart}`).getTime();

                if (!isNaN(injuryTime)) {
                    setInterval(() => {
                        const now = new Date().getTime();
                        const diff = Math.max(0, now - injuryTime);

                        document.getElementById('days').innerText = Math.floor(diff / 86400000);
                        document.getElementById('hours').innerText = Math.floor((diff % 86400000) / 3600000).toString().padStart(2, '0');
                        document.getElementById('minutes').innerText = Math.floor((diff % 3600000) / 60000).toString().padStart(2, '0');
                        document.getElementById('seconds').innerText = Math.floor((diff % 60000) / 1000).toString().padStart(2, '0');
                    }, 1000);
                }
            }
        } catch (e) { 
            document.getElementById('ticker-title').innerText = "CONNECTION ERROR";
        }
    }
    initDashboard();
</script>
